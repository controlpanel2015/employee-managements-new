{% extends 'base.html.twig' %}

{% block title %}Gender Wise Employee List{% endblock %}
{% set genders={'M':"Male",'F':"Female",'O':"Others"} %}
{% block body %}

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <i class="fa fa-align-justify"></i> Gender Wise Employee List
                </div>
                <div class="card-body">
                    <table class="table table-responsive-lg table-align-middle table-bordered table-striped">
                        <thead>
                        <tr>
                            <th>Gender</th>
                            <th>Employee Count</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for employee in employee_list %}
                            <tr>
                                <td>{{ genders[employee.gender] }}</td>
                                <td>{{ employee.no_of_employee }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

